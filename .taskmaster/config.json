{
  "models": {
    "main": {
      "provider": "anthropic",
      "modelId": "claude-sonnet-4-20250514",
      "maxTokens": 16000,
      "temperature": 0.2
    },
    "research": {
      "provider": "google",
      "modelId": "gemini-2.5-flash",
      "maxTokens": 8000,
      "temperature": 0.1
    },
    "fallback": {
      "provider": "google",
      "modelId": "gemini-2.5-pro",
      "maxTokens": 32000,
      "temperature": 0.2
    }
  },
  "global": {
    "logLevel": "info",
    "debug": false,
    "defaultNumTasks": 10,
    "defaultSubtasks": 3,
    "defaultPriority": "high",
    "projectName": "RemodelVision",
    "responseLanguage": "English",
    "enableCodebaseAnalysis": true,
    "enableProxy": false,
    "anonymousTelemetry": false,
    "defaultTag": "main"
  },
  "project": {
    "stack": {
      "frontend": "react-19",
      "framework": "vite",
      "language": "typescript",
      "3d": "react-three-fiber",
      "state": "zustand",
      "backend": "supabase",
      "hosting": "vercel",
      "ai": ["gemini", "nano-banana-pro"],
      "scraping": "firecrawl"
    },
    "conventions": {
      "srcDir": "src",
      "componentsDir": "src/components",
      "servicesDir": "src/services",
      "typesDir": "src/types",
      "hooksDir": "src/hooks",
      "storeDir": "src/store"
    },
    "deployment": {
      "platform": "vercel",
      "branch": "main",
      "previewBranches": true,
      "productionDomain": "remodelvision.app"
    },
    "database": {
      "provider": "supabase",
      "localPort": 54322,
      "generateTypes": true
    }
  },
  "claudeCode": {
    "autoApprove": [
      "Read",
      "Glob",
      "Grep",
      "Bash(pnpm:*)",
      "Bash(git status)",
      "Bash(git diff)"
    ],
    "commands": {
      "ship": ".claude/commands/ship.md",
      "task": ".claude/commands/task.md",
      "sync-db": ".claude/commands/sync-db.md"
    }
  },
  "taskmaster": {
    "phases": [
      {
        "id": 1,
        "name": "Context Foundation",
        "focus": "Firecrawl + PropertyContext + Supabase schema",
        "weeks": "1-3"
      },
      {
        "id": 2,
        "name": "AI Generation",
        "focus": "Gemini workflows + Nano Banana Pro",
        "weeks": "4-6"
      },
      {
        "id": 3,
        "name": "3D Enhancement",
        "focus": "PropertyContext-driven scenes + WebGPU",
        "weeks": "7-9"
      },
      {
        "id": 4,
        "name": "Professional Features",
        "focus": "Multi-project + Contractor tools",
        "weeks": "10-12"
      }
    ],
    "prdDirectory": ".taskmaster/docs",
    "tasksFile": ".taskmaster/tasks/tasks.json"
  }
}
