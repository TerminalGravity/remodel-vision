# ===========================================
# RemodelVision Environment Configuration
# ===========================================
# Copy to .env.local and fill in your values
# NEVER commit .env.local to git

# -------------------------------------------
# Supabase (Required)
# -------------------------------------------
# Get from: https://supabase.com/dashboard/project/[project]/settings/api
# NOTE: Vite requires VITE_ prefix for client-side access
VITE_SUPABASE_URL="https://your-project.supabase.co"
VITE_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# -------------------------------------------
# Google AI (Required)
# -------------------------------------------
# Get from: https://aistudio.google.com/apikey
# NOTE: Vite requires VITE_ prefix for client-side access
VITE_GOOGLE_API_KEY="your-google-api-key"

# Optional: For Vertex AI / advanced features
GOOGLE_CLOUD_PROJECT="your-gcp-project-id"

# -------------------------------------------
# Firecrawl (Required for property scraping)
# -------------------------------------------
# Get from: https://firecrawl.dev/
# NOTE: Vite requires VITE_ prefix for client-side access
VITE_FIRECRAWL_API_KEY="your-firecrawl-api-key"

# -------------------------------------------
# Vercel (Auto-injected in production)
# -------------------------------------------
# These are set automatically by Vercel
# VERCEL_URL=
# VERCEL_ENV=

# -------------------------------------------
# Development Only
# -------------------------------------------
# Set to 'development' for local, 'production' for deployed
NODE_ENV="development"

# Enable debug logging
DEBUG="false"
